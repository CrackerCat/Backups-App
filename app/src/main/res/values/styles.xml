<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="tabSelectedTextColor">@color/primaryTextColor</item>
        <item name="tabIndicatorColor">@color/secondaryDarkColor</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="RecyclerViewCard">
        <item name="cardBackgroundColor">@color/primaryLightColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:elevation">3dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardMaxElevation">3dp</item>
    </style>

    <style name="FloatingActionButtonInactive">
        <item name="tint">@color/primaryColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/label_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:visibility">gone</item>
        <item name="backgroundTint">@color/primaryDarkColor</item>
        <item name="fabSize">auto</item>
    </style>

    <style name="FloatingActionButtonActive" parent="FloatingActionButtonInactive">
        <item name="backgroundTint">@color/secondaryDarkColor</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="FloatingActionButtonLabel">
        <item name="android:background">@drawable/rounded_bg</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>
